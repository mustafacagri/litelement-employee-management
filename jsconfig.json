{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@utils/*": ["./src/utils/*"],
			"@services/*": ["./src/services/*"],
			"@views/*": ["./src/views/*"],
			"@styles/*": ["./src/styles/*"],
			"@models/*": ["./src/models/*"],
			"@i18n/*": ["./src/i18n/*"],
			"@router/*": ["./src/router/*"],
			"@stores/*": ["./src/stores/*"],
			"@constants/*": ["./src/constants/*"]
		}
	},
	"include": ["src/**/*", "test/**/*"]
}
